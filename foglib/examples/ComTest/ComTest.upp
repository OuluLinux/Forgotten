noblitz;

uses
	Com;

include
	.;

file
	Readme.txt,
	ComTest.mfog highlight cpp,
	"FOG Generated" readonly separator,
	Abstract.hxx,
	Abstract.cxx,
	Algorithm.cxx,
	Algorithm.hxx,
	Com.hxx,
	Com.cxx,
	Container.cxx,
	Container.hxx,
	Global.cxx,
	Global.hxx,
	Hash.cxx,
	Hash.hxx,
	Lang.cxx,
	Lang.hxx,
	Main.cxx,
	Main.hxx,
	Native.cxx,
	Native.hxx,
	Prim.cxx,
	Prim.hxx,
	Random.cxx,
	Random.hxx,
	Text.cxx,
	Text.hxx,
	Shared.hxx,
	Shared.cxx,
	Stream.hxx,
	Stream.cxx,
	Util.hxx,
	Util.cxx,
	Math.hxx,
	Math.cxx,
	Compiler.hxx,
	Compiler.cxx,
	Chrono.hxx,
	Chrono.cxx,
	Indirect.hxx,
	Indirect.cxx,
	_ readonly separator;

mainconfig
	"" = "";

custom() "fog",
	"",
	"$(DIR)/Main.hxx";

custom(POSIX) "mfog",
	"fog -cd$(DIR) -t4 -I../../src -DPOSIX -DCPU64 -global Global -nobanner"
	" -f $(PATH)\n",
	"$(DIR)/Main.hxx";

custom(WIN32) "",
	"fog -cd$(DIR) -t4 -I../../src -DWIN32 -DCPU64 -global Global -nobanner"
	" -nobanner -f $(PATH)\n",
	"$(DIR)/Main.hxx";

