create table 'displays' (
       'id' integer primary key,
       'pointer' integer,
       'mode_id' integer);

create table 'display_modes' (
       'id' integer primary key,
       'mode_id' integer,
       'display_id' integer,
       'width' integer,
       'height' integer,
       'depth' integer,
       'refresh' integer);

create trigger 'display-mode-selected' before update of 'mode_id' on 'displays'
when OLD.mode_id <> NEW.mode_id
begin
       update trigger_dumpzone set rubbish=FORGOTTEN_CALLBACK('vbeModeChangedCallback', NEW.id, NEW.mode_id);
end;
